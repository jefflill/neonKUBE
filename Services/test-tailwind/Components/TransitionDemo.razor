<div class="flex flex-col items-center py-16">
    <div class="h-32 w-32">
        <TransitionGroup Show="@isShowing">
            <Transition 
                        Show="@isShowing"
                        Enter="transform transition"
                        EnterDuration="400"
                        EnterFrom="opacity-0 rotate-[-120deg] scale-50"
                        EnterTo="opacity-100 rotate-0 scale-100"
                        Leave="transform transition ease-in-out"
                        LeaveDuration="200"
                        LeaveFrom="opacity-100 rotate-0 scale-100 "
                        LeaveTo="opacity-0 scale-95 "
                        Context="transitionCss"
                        @ref="transition">
            <div class="h-full w-full rounded-md bg-gray-600 shadow-lg @transitionCss" />
            </Transition>
        </TransitionGroup>
    </div>
</div>

<HeadlessButton 
    OnClick="@ShowTransitionAsync" 
    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    Show
</HeadlessButton>