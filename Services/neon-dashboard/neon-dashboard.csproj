<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <OutputType>Exe</OutputType>
        <RootNamespace>NeonDashboard</RootNamespace>
        <IsPackable>false</IsPackable>
        <AssemblyName>neon-dashboard</AssemblyName>
        <Configurations>Debug;Release</Configurations>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
        <NoWarn>$(NoWarn);RZ10012</NoWarn>
    </PropertyGroup>

    <!-- Runtime settings -->

    <PropertyGroup>
        <ServerGarbageCollection>true</ServerGarbageCollection>
        <ConcurrentGarbageCollection>true</ConcurrentGarbageCollection>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="$(NK_ROOT)\Lib\Neon.Kube.BuildInfo\AssemblyAttributes.cs" Link="Properties\AssemblyAttributes.cs" />
        <Compile Include="$(NK_ROOT)\Lib\Neon.Kube.BuildInfo\AssemblyInfo.cs" Link="Properties\AssemblyInfo.cs" />
    </ItemGroup>

    <ItemGroup>
        <Watch Include="**\*.razor" />
        <Watch Include="**\*.cs" />
        <Watch Include="**\*.razor.cs" />
        <Watch Include="**\*.css" />
        <Watch Include="**\*.cshtml" />
        <Watch Include="**\*.js" Exclude="node_modules\**\*;**\*.js.map;obj\**\*;bin\**\*" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="wwwroot\css\" />
    </ItemGroup>

    <Target Name="NodeCheck" BeforeTargets="PreBuildEvent">
        <Exec Command="npm --version" ContinueOnError="false">
            <Output TaskParameter="ExitCode" PropertyName="ErrorCodeNode" />
        </Exec>
        <Error Condition="'$(ErrorCodeNode)' != '0'" Text="NPM is required for this project. please install Node.js" />
    </Target>

    <Target Name="NpmInstall" BeforeTargets="PreBuildEvent" DependsOnTargets="NodeCheck" Inputs="package.json" Outputs="node_modules/.install-stamp">
        <Exec Command="npm install" ContinueOnError="false" />

        <!-- Write the stamp file, so incremental builds work -->
        <Touch Files="node_modules/.install-stamp" AlwaysCreate="true" />
    </Target>

    <!-- Non-NEONFORGE package references -->

    <ItemGroup>
        <PackageReference Include="Analytics" Version="3.8.1" />
        <PackageReference Include="Blazor-Analytics" Version="3.11.0" />
        <PackageReference Include="Blazored.LocalStorage" Version="4.3.0" />
        <PackageReference Include="ChartJs.Blazor.Fork" Version="2.0.2" />
        <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="7.0.5" />
        <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="7.0.5" />
        <PackageReference Include="OpenTelemetry.Exporter.Console" Version="1.4.0" />
        <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.4.0" />
        <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.0.0-rc9.14" />
        <PackageReference Include="OpenTelemetry.Instrumentation.Http" Version="1.0.0-rc9.14" />
        <PackageReference Include="prometheus-net" Version="8.0.0" />
        <PackageReference Include="prometheus-net.AspNetCore" Version="8.0.0" />
        <PackageReference Include="prometheus-net.DotNetRuntime" Version="4.4.0" />
        <PackageReference Include="Tailwind.Extensions.AspNetCore" Version="1.0.0-beta3" />
    </ItemGroup>

    <!-- Local solution project references -->

    <ItemGroup>
        <ProjectReference Include="..\..\Lib\Neon.Kube.BuildInfo\Neon.Kube.BuildInfo.csproj" />
        <ProjectReference Include="..\..\Lib\Neon.Kube\Neon.Kube.csproj" />
    </ItemGroup>

    <!-- NEONFORGE package or project references -->

    <Choose>
        <When Condition="'$(NeonBuildUseNugets)' == 'true'">
            <ItemGroup>
                <PackageReference Include="Neon.Common" Version="$(NeonSdkPackageVersion)" />
                <PackageReference Include="Neon.Service" Version="$(NeonSdkPackageVersion)" />
                <PackageReference Include="Neon.Tailwind" Version="$(NeonSdkPackageVersion)" />
                <PackageReference Include="Neon.Web" Version="$(NeonSdkPackageVersion)" />
            </ItemGroup>
        </When>
        <Otherwise>
            <ItemGroup>
                <ProjectReference Include="$(NF_ROOT)\Lib\Neon.Common\Neon.Common.csproj" />
                <ProjectReference Include="$(NF_ROOT)\Lib\Neon.Service\Neon.Service.csproj" />
                <ProjectReference Include="$(NF_ROOT)\Lib\Neon.Tailwind\Neon.Tailwind.csproj" />
                <ProjectReference Include="$(NF_ROOT)\Lib\Neon.Web\Neon.Web.csproj" />
            </ItemGroup>
        </Otherwise>
    </Choose>

</Project>
