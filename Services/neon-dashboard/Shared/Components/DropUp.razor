<div class="dropup__wrapper relative" @onmouseenter="MouseIn" @onmouseleave="MouseOut">
	<div class="dropup button" @onclick="Show">
		<Icon Content=@Icon />
		<div class="noselect name">
		@*	<p>@Title</p>*@
			<h3>@((Active != null) ? Active.Name : "Loading")</h3>
		</div>
		<Icon Content=@Icons.ChevronUp />
	</div>
	
	<div class="absolute menu @(HideMenu ? "hide" : "")">
		<div class="menu-header button__icon" @onmouseout:stopPropagation>
			<Icon Content=@Icon />
			<h3>@Title</h3>
		</div>
		@foreach (var item in Items)
	  {
		  if (DropList is not null)
		  {
			  <div>@DropList(item)</div>
		  }
	  }
	  </div>
</div>