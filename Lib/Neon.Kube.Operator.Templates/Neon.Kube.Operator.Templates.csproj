<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0</TargetFrameworks>
        <Version>0.9.2-alpha</Version>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageProjectUrl>https://docs.neonforge.com/docs/operator-sdk</PackageProjectUrl>
        <PackageTags>kubernetes operator sdk neonkube k8s template templates</PackageTags>
        <Description>Kubernetes Operator SDK templates.</Description>
        <RepositoryUrl>https://github.com/nforgeio/neonKUBE</RepositoryUrl>
        <PackageIcon>nuget-icon.png</PackageIcon>
        <RepositoryType>git</RepositoryType>
        <PackageReleaseNotes>https://github.com/nforgeio/neonKUBE/releases</PackageReleaseNotes>
        <IsPackable>true</IsPackable>
        <PackageType>Template</PackageType>
        <PackageId>Neon.Kube.Operator.Templates</PackageId>
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
        <NoWarn>$(NoWarn);1591;CS2008</NoWarn>
    </PropertyGroup>

    <!-- Template related settings: https://www.kenmuse.com/blog/custom-net-item-templates/ -->

    <PropertyGroup>
        <!-- Don't need any assemblies that would be built-->
        <IncludeBuildOutput>false</IncludeBuildOutput>

        <!-- Needed to prevent NU5128 warning -->
        <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>

        <!-- Enable NuGet to handle files with names that start with "." -->
        <NoDefaultExcludes>true</NoDefaultExcludes>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="OperatorTemplate\**\*" Exclude="OperatorTemplate\**\bin\**;OperatorTemplate\**\obj\**" />
        <Compile Remove="OperatorTemplate\**\*" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="OperatorTemplate\appsettings.json" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\nuget-icon.png" Pack="true" PackagePath="" />
        <None Include="..\..\LICENSE" Pack="true" PackagePath="" />
    </ItemGroup>

    <!-- $todo(jefflill): Disabling this for now because it fails when building via scripts (msbuild) -->

    <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'true' == 'false'">
        <Exec Command="dotnet pack --no-build &quot;$(ProjectPath)&quot; -o &quot;$(OutDir)&quot;" />
        <Exec Command="dotnet new install --force &quot;$(OutDir)$(ProjectName).$(PackageVersion).nupkg&quot;" />
    </Target>

</Project>
