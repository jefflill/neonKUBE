<Project ToolsVersion="Current" >
    <Target Name="PropsConfig">
        <PropertyGroup>
            <OperatorBasePath Condition="'$(OperatorBasePath)' == ''">$(MSBuildProjectDirectory)</OperatorBasePath>
        </PropertyGroup>

        <PropertyGroup>
            <OperatorManifestPath Condition="'$(OperatorManifestPath)' == ''">$(OperatorBasePath)\Manifests</OperatorManifestPath>
        </PropertyGroup>

        <PropertyGroup>
            <OperatorCrdPath Condition="'$(OperatorCrdPath)' == ''">$(OperatorManifestPath)\CRDs</OperatorCrdPath>
        </PropertyGroup>

        <PropertyGroup>
            <OperatorRbacPath Condition="'$(OperatorRbacPath)' == ''">$(OperatorManifestPath)\RBAC</OperatorRbacPath>
        </PropertyGroup>

        <PropertyGroup>
            <OperatorName Condition="'$(OperatorName)' == ''">$(PackageId)</OperatorName>
        </PropertyGroup>
    </Target>

    <PropertyGroup Condition="'$(SolutionName)' != 'neonCLOUD' And $([MSBuild]::IsOSPlatform('Linux'))">
        <OperatorCliPath>$(PkgNeon_Kube_Operator_MSBuild)\contentFiles\any\netstandard2.0\linux-x64\operator-cli</OperatorCliPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(SolutionName)' != 'neonCLOUD' And $([MSBuild]::IsOSPlatform('OSX'))">
        <OperatorCliPath>$(PkgNeon_Kube_Operator_MSBuild)\contentFiles\any\netstandard2.0\osx-x64\operator-cli</OperatorCliPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(SolutionName)' != 'neonCLOUD' And $([MSBuild]::IsOSPlatform('Windows'))">
        <OperatorCliPath>$(PkgNeon_Kube_Operator_MSBuild)\contentFiles\any\netstandard2.0\win-x64\operator-cli</OperatorCliPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(SolutionName)' == 'neonCLOUD' And $([MSBuild]::IsOSPlatform('Linux'))">
        <OperatorCliPath >$(NK_ROOT)\Lib\Neon.Kube.Operator.MSBuild\linux-x64\operator-cli</OperatorCliPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(SolutionName)' == 'neonCLOUD' And $([MSBuild]::IsOSPlatform('OSX'))">
        <OperatorCliPath >$(NK_ROOT)\Lib\Neon.Kube.Operator.MSBuild\osx-x64\operator-cli</OperatorCliPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(SolutionName)' == 'neonCLOUD' And $([MSBuild]::IsOSPlatform('Windows'))">
        <OperatorCliPath >$(NK_ROOT)\Lib\Neon.Kube.Operator.MSBuild\win-x64\operator-cli</OperatorCliPath>
    </PropertyGroup>
</Project>